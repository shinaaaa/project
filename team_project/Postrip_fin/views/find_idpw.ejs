<html>

<head>
	<title>여행을 포스팅하다 Postrip</title>
	<!-- Scripts -->
	<script src="assets/js/jquery.min.js"></script>
	<script src="assets/js/jquery.poptrox.min.js"></script>
	<script src="assets/js/skel.min.js"></script>
	<script src="assets/js/main.js"></script>
	<script src="javascripts/kdr_find.js"></script>
	<script src=""></script>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="stylesheet" href="assets/css/logout.css" />
	<link rel="stylesheet" href="assets/css/main.css" />
	<link rel="stylesheet" href="assets/css/mypage.css" />
	<link rel="stylesheet" href="assets/css/join.css" />
</head>

<body>

	<!-- Wrapper -->
	<div id="wrapper">

		<!-- Main -->
		<section id="main">

			<div>
				<form class="find_form">
					<div style="margin-left: 25%; margin-right: 25%">
						<%
					if (id_login) {
					%>
						<p style="font-size: 20pt;"><%= id %></p>
						<button id="find_close_btn" type="button">Close</button>
						<%
					} else if (pw_login) {
					%>
						<div>
							<p style="font-size: 20pt;">비밀번호를 수정해주세요</p>
							<input id="new_pw" type="password" />
							<div class="new_pw_position">
								<button id="new_pw_btn">Edit</button>
							</div>
						</div>
						<button id="find_close_btn" type="button">Close</button>
						<%
					} else {
					%>
						<p style="font-size: 20pt;">Find</p>
						<p style="font-size: 14pt;">ID 찾기</p>
						<input id="find_id_email" type="text" placeholder="E-mail" />
						<input id="find_id_name" type="text" placeholder="Name" />

						<div class="login_div" style="text-align: center">
							<button id="find_find_id_btn" type="button">Find ID</button>
						</div>

						<p style="font-size: 14pt;">PW 찾기</p>
						<input id="find_pw_email" type="text" placeholder="E-mail" />
						<input id="find_pw_id" type="text" placeholder="ID" />

						<div class="login_div" style="text-align: center">
							<button id="find_find_pw_btn" type="button">Find PW</button>
						</div>
						<% } %>
					</div>
				</form>
			</div>

		</section>

		<!-- Footer -->
		<footer id="footer">
			<p>&copy; Untitled. All rights reserved. Design: <a href="http://templated.co">TEMPLATED</a>. Demo
				Images:
				<a href="http://unsplash.com">Unsplash</a>.</p>
		</footer>

	</div>
</body>

</html>